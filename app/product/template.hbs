<h2>{{model.name}}</h2>

{{#if selectedVariant}}
  <div class="selected-sku">
    <strong>Variant:</strong> {{selectedVariant}}
  </div>
{{/if}}

{{#if selectedValuesArray.length}}
<div>
  <strong>selected:</strong>

  {{#each selectedValuesArray as |selection|}}
    <span class="selected-variant-value">{{selection.label}}</span>
  {{/each}}
</div>
{{/if}}

{{#each variantThemes as |theme|}}
  {{#if (has-component (concat 'variant-pickers/' theme.label))}}
    {{component (concat 'variant-pickers/' theme.label)
        variant-selected=(action 'variant-selected')
        values=theme.values
    }}
  {{else}}
    Missing variant picker for variant type `{{theme.label}}`
  {{/if}}
{{/each}}
